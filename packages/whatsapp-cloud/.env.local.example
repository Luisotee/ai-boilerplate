# WhatsApp Cloud API (Meta Official)
META_PHONE_NUMBER_ID=           # Phone Number ID from Meta Developer Console
META_ACCESS_TOKEN=              # System User permanent access token
META_APP_SECRET=                # App Secret for webhook signature verification
META_WEBHOOK_VERIFY_TOKEN=      # Custom string set during webhook setup in Meta Console
META_GRAPH_API_VERSION=v21.0    # Graph API version

# Service Config
WHATSAPP_CLOUD_PORT=3002
WHATSAPP_CLOUD_HOST=0.0.0.0
WHATSAPP_CLOUD_API_KEY=         # API key for this service (AI API uses this to authenticate)
WHATSAPP_CALLBACK_URL=          # Override callback URL (for Docker: http://whatsapp-cloud:3002)

# Shared (also loadable from root .env)
AI_API_URL=http://localhost:8000
AI_API_KEY=
LOG_LEVEL=info
CORS_ORIGINS=
RATE_LIMIT_GLOBAL=30
RATE_LIMIT_EXPENSIVE=5
